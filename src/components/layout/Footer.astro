---
import { rootImages } from '@core/rootImages';
import { Image } from 'astro:assets';
import { motion } from 'framer-motion';
import { t } from 'i18next';
import LogoComponent from './LogoComponent.astro';

const socialMedia = [
	{
		title: 'GitHub',
		href: '#',
		icon: rootImages.icons.github,
	},
	{
		title: 'Facebook',
		href: '#',
		icon: rootImages.icons.facebook,
	},
	{
		title: 'Instagram',
		href: '#',
		icon: rootImages.icons.instagram,
	},
];

const links = [
	{ href: '#', text: t('home.footer.links.terms') },
	{ href: '#', text: t('home.footer.links.privacy') },
	{ href: '#', text: t('home.footer.links.cookies') },
];
---

<footer class='bg-primary-50 px-5 py-10 text-foreground-50'>
	<motion.div
		initial={{ x: -100, opacity: 0 }}
		animate={{ x: 0, opacity: 1 }}
		client:visible
		transition={{ duration: 0.5, delay: 0.2 }}
		className='container mx-auto'
	>
		<div class='flex flex-col items-center gap-4 text-center'>
			<LogoComponent size='large' />
			<p class='mx-auto mt-4 max-w-md text-lg font-semibold'>
				{t('home.footer.slogan')}
			</p>

			<div class='justify mt-4 flex gap-3 sm:flex-row sm:items-center sm:justify-center'>
				{
					socialMedia.map((social) => (
						<a href={social.href} target='_blank' rel='noopener noreferrer'>
							<Image
								src={social.icon}
								alt={social.title}
								width={40}
								height={40}
								class='hover:brightness-200'
							/>
						</a>
					))
				}
			</div>
		</div>

		<hr class='my-10 border-foreground-300 dark:border-foreground-400' />

		<div class='flex flex-col items-center justify-center'>
			<p class='text-center text-sm text-foreground-50'>
				Â© {new Date().getFullYear()}{' '}
				{t('home.footer.rights')}
			</p>
		</div>
	</motion.div>
</footer>
