---
import { motion } from 'framer-motion';
import { t } from 'i18next';
import CrossFunctional from './CrossFunctional.astro';
---

<motion.section
	initial={{ x: -100, opacity: 0 }}
	animate={{ x: 0, opacity: 1 }}
	transition={{ duration: 0.5, delay: 0.2 }}
	client:visible
	id='technologies'
	className='mx-auto flex flex-col items-center justify-center gap-10 p-10 pt-20 md:container'
>
	<h3
		class='text-center text-2xl font-semibold text-foreground sm:text-left sm:text-3xl md:text-4xl lg:text-5xl'
	>
		{t('home.technologies.title')}
	</h3>

	<div
		class='flex flex-col items-center gap-12 text-sm text-foreground xs:text-base sm:text-center sm:text-lg md:px-5 lg:w-[68%] lg:text-xl'
	>
		<p>
			{t('home.technologies.description')}
		</p>
	</div>

	<CrossFunctional />
</motion.section>
