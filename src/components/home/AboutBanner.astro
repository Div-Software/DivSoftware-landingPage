---
import { motion } from 'framer-motion';
import { t } from 'i18next';
---

<motion.section
	id='about'
	initial={{ x: -100, opacity: 0 }}
	animate={{ x: 0, opacity: 1 }}
	transition={{ duration: 0.5, delay: 0.2 }}
	client:visible
	className='mt-5 px-4 py-10 pt-20 sm:px-10 md:mx-auto lg:px-40'
>
	<div class='xl:max-full flex flex-col items-center justify-center gap-10 sm:max-w-full'>
		<h2
			class='text-center text-2xl font-semibold text-foreground sm:text-left sm:text-3xl md:text-4xl lg:text-5xl'
		>
			{t('home.about.title')}
		</h2>
		<div
			class='flex flex-col items-center gap-12 px-5 text-sm text-foreground xs:text-base sm:text-lg lg:text-xl xl:max-w-4xl'
		>
			<h3 class='w-fit'>
				{t('home.about.paragraphOne')}
			</h3>
			<h4 class='w-fit'>
				{t('home.about.paragraphTwo')}
			</h4>
		</div>
	</div>
</motion.section>
