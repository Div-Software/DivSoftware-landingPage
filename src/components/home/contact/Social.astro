---
import telegram from '@assets/social/telegramlogo.webp';
import whatsapp from '@assets/social/whatsapplogo.webp';
import { Image } from 'astro:assets';
import { t } from 'i18next';
---

<div class='container mx-auto text-center'>
	<div class='py-8'>
	  <p class='text-center text-2xl font-bold sm:text-left'>{t('home.contact.social.title')}</p>
	  <p class='mt-2 text-center text-base sm:text-left'>{t('home.contact.social.subtitle')}</p>
	</div>
	<div class='flex flex-col items-center justify-center'>
	  <div class='my-4 flex items-center rounded-lg p-4 md:my-0'>
		<div class='flex flex-col items-center gap-4 bg-white/5 p-4 shadow-lg backdrop-blur-2xl sm:flex-row sm:p-8'>
		  <div class='flex h-16 w-24 items-center justify-center rounded-xl bg-whatsapp shadow shadow-whatsapp backdrop-blur-3xl sm:h-24 sm:w-36'>
			<Image src={whatsapp} alt='WhatsApp' width={102} height={100} class='h-12 w-12' />
		  </div>
		  <div>
			<p class='text-lg mb-1'>WhatsApp</p>
			<p class='text-xs '>
			  {
				`https://api.whatsapp.com/send/?phone=584126712946&text&type=phone_number&app_absent=0`.slice(
				  0,
				  20
				) + '...'
			  }
			</p>
		  </div>
		</div>
	  </div>
	  <div class='my-4 flex items-center rounded-lg p-4 md:my-0'>
		<div class='flex flex-col items-center gap-4 bg-white/5 p-4 shadow-lg backdrop-blur-2xl sm:flex-row sm:p-8'>
		  <div class='flex h-8 w-12 items-center justify-center rounded-xl bg-telegram shadow shadow-whatsapp backdrop-blur-3xl sm:h-24 sm:w-36'>
			<Image src={telegram} alt='Telegram' width={102} height={100} class='h-12 w-12' />
		  </div>
		  <div>
			<p class='text-lg mb-1'>Telegram</p>
			<p class='text-xs '>
			  {
				`https://api.telegram.com/send/?phone=584126712946&text&type=phone_number&app_absent=0`.slice(
				  0,
				  20
				) + '...'
			  } 
			  
			</p>
		  </div>
		</div>
	  </div>
	</div>
  </div>