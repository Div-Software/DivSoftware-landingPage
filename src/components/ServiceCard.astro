---
import { Button, Link } from '@nextui-org/react';

interface Props {
	title: string;
	text: string;
	href: string;
	img: string;
	hasGradient: boolean;
	id: string;
}

const { href, title, text, hasGradient, id, img } = Astro.props;

const imgTitle: string = `${id} - Image`;
---

<article
	class={`flex h-ful w-full max-w-[650px] flex-col items-center justify-center gap-5 rounded-2xl border-t-4 border-primary-400 px-5 py-3 [box-shadow:4px_7px_26px_0px_rgba(0,_0,_0,_0.12)] lg:p-7 xl:px-10 ${
		hasGradient
			? 'bg-[linear-gradient(96deg,_#130428_0.58%,_#251043_16.32%,_#38126D_29.33%,_#261045_45.66%,_#190634_54.44%)]'
			: 'bg-[linear-gradient(110deg,_#130428_19.95%,_#251043_67.64%,_#38126D_107.08%,_#261045_156.61%,_#190634_183.21%)]'
	}`}
>
	<!-- Service's information side -->
	<aside class='flex flex-col items-center justify-center gap-10 lg:flex-row'>
		<!-- Image container  -->
		<div class='relative left-[20%] right-1/4 flex items-center lg:left-0 lg:right-0'>
			<!-- Floating Circles -->
			<div class='absolute -left-[5%] bottom-[25%] h-1.5 w-1.5 rounded-full bg-zinc-100 lg:left-0'>
			</div>
			<div
				class='absolute bottom-[40%] left-[60%] h-1.5 w-1.5 rounded-full bg-zinc-100 lg:bottom-[50%] lg:left-[100%]'
			>
			</div>
			<div class='absolute -left-1 bottom-[60%] h-1.5 w-1.5 rounded-full bg-purple-800'></div>
			<div
				class='absolute bottom-1.5 left-[50%] h-1.5 w-1.5 rounded-full bg-purple-800 lg:bottom-1 lg:left-[70%]'
			>
			</div>
			<!-- Service's image -->
			<img
				src={img}
				alt={imgTitle}
				class='relative z-10 h-40 w-40 transform transition-transform duration-300 ease-in-out hover:scale-110'
			/>
			<div
				class='relative top-24 h-16 w-40 flex-shrink-0 origin-top-left rotate-[175deg] rounded-full bg-[linear-gradient(180deg,_#2C1250_0%,_#2C1250_5%,_rgba(44,_18,_80,_0.00)_70%)]'
			>
			</div>
		</div>

		<!-- tService's title & description -->
		<div class='flex flex-col items-center justify-center gap-4 xl:h-40'>
			<h3
				class='w-full text-center text-sm font-bold text-foreground xs:text-base sm:text-lg lg:text-3xl'
			>
				{title}
			</h3>
			<p class='line-clamp-4 max-h-40 text-xs sm:text-sm md:text-ellipsis lg:text-[0.95rem]'>
				{text}
			</p>
		</div>
	</aside>

	<!-- Learn More Button side -->
	<aside>
		<Link href={href}>
			<Button
				variant='bordered'
				style={{ background: '#2C1250', border: '1px solid #693B93', fontWeight: 'bold' }}
			>
				Learn More
			</Button>
		</Link>
	</aside>
</article>

<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
</style>
