---
import Footer from '@components/layout/Footer.astro';
import LogoComponent from '@components/layout/LogoComponent.astro';
import '@fontsource/poppins';
import i18next, { t } from 'i18next';
import { NavbarHome } from '../components/layout/Navbar';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang={i18next.language}>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content={t('site.description')} />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/logo-divsoftware.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class='bg-background text-foreground-100 dark'>
		<NavbarHome client:visible>
			<LogoComponent size='small' />
		</NavbarHome>
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	html {
		scroll-behavior: smooth;
	}
	body {
		width: 100vw;
		min-height: 100vh;
		overflow-y: overlay;
		overflow-x: hidden;
	}
	.a-scroll {
		scroll-snap-align: center;
		scroll-snap-type: proximity;
	}
</style>
